/* Responsive styling Medium devices (desktops, 1199px and up) */
@media (max-width: 1199px) { 
	
	}

/* Responsive styling Medium devices (desktops, 991px and up) */
@media (max-width: 991px) { 

.jumbotron h1 {
	font-size: 44px;
}

.jumbotron p {
	padding: 0 10px;
	}

#Homepage .col-md-4 {
	padding-top: 20px;
	padding-bottom: 20px;
	
  }
}
	
* Responsive styling Medium devices (desktops, 767px and up) */
@media (max-width: 767px) { 
	
.jumbotron h1 {
	font-size: 24px;
}

.jumbotron p {
	padding: 0;
	font-size: 16px;
	}

footer img {
width: 80px;
 }
